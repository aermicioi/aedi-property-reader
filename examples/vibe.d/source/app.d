module app;

import aermicioi.aedi;
import aermicioi.aedi_property_reader;
import vibe.vibe;
import std.functional : toDelegate;

void showError(HTTPServerRequest req, HTTPServerResponse res, HTTPServerErrorInfo error)
{
	res.render!("error.dt", req, error);
}

void showHome(HTTPServerRequest req, HTTPServerResponse res)
{
	string username = "Tester Test";
	res.render!("home.dt", req, username);
}

auto config() {

	auto cont = container(
		argument(),
		env(),
		xml("./config.xml"),
		xml("~/.config/aedi-example/config.xml"),
		xml("/etc/aedi-example/config.xml"),
		json("./config.json"),
		json("~/.config/aedi-example/config.json"),
		json("/etc/aedi-example/config.json"),
		sdlang("./config.sdlang"),
		sdlang("~/.config/aedi-example/config.sdlang"),
		sdlang("/etc/aedi-example/config.sdlang")
	);

	foreach (subcontainer; cont) {
		with (subcontainer.configure) {
			register!ushort("http.port");
			register!(string[])("http.listen");
			register!string("http.host");
			register!bool("http.compression");
			register!string("log.access.file");
			register!string("log.access.format");
			register!bool("log.access.console");
			register!string("route.index");
			register!string("route.about");
			register!string("route.public");
		}
	}

	return cont;
}

auto services(T)(T parent) {
	auto cont = container(
		singleton,
		prototype
	);

	with (cont[0].configure(parent)) {
		register!HTTPServerSettings
			.set!"bindAddresses"("http.listen".lref)
			.set!"port"("http.port".lref)
			.set!"accessLogFormat"("log.access.format".lref)
			.set!"accessLogFile"("log.access.file".lref)
			.set!"hostName"("http.host".lref)
			.set!"useCompressionIfPossible"("http.compression".lref)
			.set!"errorPageHandler"(toDelegate(&showError));

		register!URLRouter
			.construct("")
			.callback((Locator!() l, ref URLRouter router) {
				router.get(l.locate!string("route.index"), &showHome);
				router.get(l.locate!string("route.about"), staticTemplate!"about.dt");
				router.get(l.locate!string("route.public"), serveStaticFiles("public"));
			});
	}

	return cont;
}

void main()
{
	import std.file;

	auto c = aggregate(config, "parameters");
	c.set(services(c), "services");
	c.instantiate;
	scope(exit) c.terminate;

	import std.stdio;
	listenHTTP(c.locate!HTTPServerSettings, c.locate!URLRouter);
	lowerPrivileges();
	runEventLoop();
}