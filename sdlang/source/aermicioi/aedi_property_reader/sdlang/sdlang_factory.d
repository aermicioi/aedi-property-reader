module aermicioi.aedi_property_reader.sdlang.sdlang_factory;

import aermicioi.aedi_property_reader.core.convertor_factory;
import aermicioi.aedi_property_reader.sdlang.accessor;
import aermicioi.aedi.factory;
import aermicioi.aedi.storage.locator;
import aermicioi.aedi.storage.wrapper;
import aermicioi.aedi.storage.decorator;
import aermicioi.aedi.exception;
import std.traits;
import sdlang.ast;
import sdlang;

/**
A convertor factory that uses custom fromXml family of functions to convert xml Tag into To types.

Params:
	FromType = original representation form of data to be converted.
	ToType = type of component that is built based on FromType data.
**/
class SdlangConvertorFactory(To, From : SdlangElement = SdlangElement) : ConvertorFactory!(SdlangElement, To) {

    private {

        Locator!() locator_;
        SdlangElement convertible_;
    }

    public {

        @property {
            /**
            Set convertible

            Params:
                convertible = data that the factory should convert into ToType component
            Returns:
                SdlangConvertorFactory!To
            **/
        	SdlangConvertorFactory!To convertible(SdlangElement convertible) @safe nothrow {
        		this.convertible_ = convertible;

        		return this;
        	}

            /**
            Get convertible data

            Returns:
                FromType
            **/
        	SdlangElement convertible() @safe nothrow {
        		return this.convertible_;
        	}

            /**
    		Get the type info of T that is created.

    		Returns:
    			TypeInfo object of created component.
    		**/
        	TypeInfo type() {
        	    return typeid(To);
        	}

            /**
            Set a locator to object.

            Params:
                locator = the locator that is set to oject.

            Returns:
                LocatorAware.
            **/
        	SdlangConvertorFactory!To locator(Locator!() locator) @safe nothrow {
        		this.locator_ = locator;

        		return this;
        	}
        }

        /**
		Instantiates component of type To.

		Returns:
			To instantiated component.
		**/
        To factory() {
			import std.variant : VariantException;
            try {

                final switch (this.convertible.kind) {
					case SdlangElement.Kind.attribute: {

						return (cast(Attribute) this.convertible).value.get!To;
					}
					case SdlangElement.Kind.tag: {

						return (cast(Tag) this.convertible).expectValue!To;
					}
				}

            } catch (ValueNotFoundException e) {

                throw new InvalidCastException("Could not convert value to requested "
                    ~ typeid(To).toString()
                    ~ " value", e
                );
            } catch (VariantException e) {

				throw new InvalidCastException("Could not convert value to requested "
                    ~ typeid(To).toString()
                    ~ " value", e
                );
			}
        }
    }
}