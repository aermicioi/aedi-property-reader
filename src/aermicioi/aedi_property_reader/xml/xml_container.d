module aermicioi.aedi_property_reader.xml.xml_container;

import aermicioi.aedi;
import aermicioi.aedi_property_reader.xml.xml_factory;
import aermicioi.aedi_property_reader.generic_convertor_container;
import aermicioi.aedi.storage.locator;
import std.xml;
import std.range;
import std.typecons;

class XmlLocator : Locator!(Element) {
    
    private {
        Element xml_;
    }
    
    public {
        
        @property {
        	XmlLocator xml(Element xml) @safe nothrow {
        		this.xml_ = xml;
        	
        		return this;
        	}
        	
        	Element xml() @safe nothrow {
        		return this.xml_;
        	}
        }
        
        /**
		Get a xml element that is accessable from root element.
		
		Params:
			path = the element id.
			
		Throws:
			NotFoundException in case if the element wasn't found.
		
		Returns:
			Element child element if it is available.
		**/
        Element get(string path) {
            foreach (element; this.xml.elements) {
                if (element.tag.name == path) {
                    return element;
                }
            }
            
            throw new NotFoundException("Could not find child xml node identified by " ~ path ~ " in root xml");
        }
        
        /**
        Check if a xml element is present in xml by key.
        
        Params:
        	path = identity of element.
        	
    	Returns:
    		bool true if an element by key is present in Locator.
        **/
        bool has(in string path) inout {
            foreach (element; this.xml_.elements) {
                if (element.tag.name == path) {
                    return true;
                }
            }
            
            return false;
        }
    }
}

alias XmlConvertorContainer = GenericConvertorContainer!(Element, XmlConvertorFactory);