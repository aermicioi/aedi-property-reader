class MockLocator : Locator!(string, string) {
    
    private {
        immutable static string[string] dummy;
    }
    
    public {
        
        static this() {
            dummy = [
                "size_t": "192",
                "string": "some test",
                "array": "[10, 20, 20]"
            ];
        }
        
        string get(string identity) {
            auto reference = identity in dummy;
            
            if (reference is null) {
                import aermicioi.aedi.exception.not_found_exception;
                throw new NotFoundException("Dummy data not found in string storage");
            }
            
            return *reference;
        }
        
        bool has(in string identity) inout {
            return (identity in dummy) !is null;
        }
    }
}

class ConvertorFactoryString(ToType) : ConvertorFactory!(string, ToType) {
    private {
        string convertible_;
        Locator!() locator_;
    }
    
    public {
        @property {
        	
            ConvertorFactoryString!ToType convertible(string convertible) @safe nothrow {
            	this.convertible_ = convertible;
            
            	return this;
            }
            
            string convertible() @safe nothrow {
            	return this.convertible_;
            }
            
            ConvertorFactoryString!ToType locator(Locator!() locator) @safe nothrow {
            	this.locator_ = locator;
            
            	return this;
            }
            
            TypeInfo type() {
                return typeid(ToType);
            }
        }
        
        ToType factory() {
            return this.convertible.to!ToType;
        }
    }
}

